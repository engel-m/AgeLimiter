{
  "short_name": "Search Age Limiter",
  "name": "Search Age Limiter for Google Search",
  "version": "1.0",
  "description": "Set and save an age limit for search results. For example, always only display results of at most 1 year old.",
  "permissions": ["webRequest", "webRequestBlocking", "contextMenus", "storage", 
    "*://*.google.com/*",
    "*://*.google.co.jp/*",
    "*://*.google.co.uk/*", 
    "*://*.google.es/*", 
    "*://*.google.ca/*",
    "*://*.google.it/*",
    "*://*.google.fr/*",
    "*://*.google.com.au/*",
    "*://*.google.com.tw/*",
    "*://*.google.nl/*",
    "*://*.google.com.br/*",
    "*://*.google.com.tr/*",
    "*://*.google.be/*",
    "*://*.google.com.gr/*",
    "*://*.google.co.in/*",
    "*://*.google.com.mx/*",
    "*://*.google.dk/*",
    "*://*.google.com.ar/*",
    "*://*.google.ch/*",
    "*://*.google.cl/*",
    "*://*.google.at/*",
    "*://*.google.co.kr/*",
    "*://*.google.ie/*",
    "*://*.google.com.co/*",
    "*://*.google.pl/*",
    "*://*.google.pt/*",
    "*://*.google.com.pk/*"
  ],
  "background": {
    "scripts": ["listener.js"]
  },
  "browser_action": {
    "default_title": "Search Age Limiter",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "32": "images/icon32.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },
  "icons": {
    "16": "images/icon16.png",
    "32": "images/icon32.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "manifest_version": 2
}
